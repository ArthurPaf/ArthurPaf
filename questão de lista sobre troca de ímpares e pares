#include <stdio.h>
#define MAX 5
int main(){
 
 int k[MAX],i,temp;
 
 for(i=0;i<MAX;i++){
 printf("coloque o numero da posicao v[%d]\n",i);
 scanf("%d",&k[i]);}
 
 printf("numero escrito:\n");
 for(i=0;i<MAX;i++)
  printf("%d ",k[i]);
  
  
 for(i=0;i<MAX-1;i++){
 if(k[i]%2 != 0){
         if(k[i+1]%2 == 0)  {
                      temp=k[i];
                      k[i]=k[i+1];
                      k[i+1]=temp;
}}else{
    if(k[i]%2 == 0){
         if(k[i+1]%2 != 0)  {
                      temp=k[i];
                      k[i]=k[i+1];
                      k[i+1]=temp;
}
}
}

 }
 printf("\nnumero trocado:\n");
 for(i=0;i<MAX;i++)
 printf("%d ",k[i]);
}
