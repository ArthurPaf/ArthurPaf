int total_questao = 30;
    int pontuacao = 0;
int i;
    for (i = 0; i < total_questao; i++) {
        if (pergunta(questoes[i])) {
           printf("Correto!\n");
            pontuacao++;
        } else {
            printf("Errado!\n");
        }
    }
    // Exibe a pontuação final
    
printf("\n/////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////");
