#include <stdlib.h>
#include <locale.h>
#include <windows.h>


// Estrutura para armazenar uma pergunta e suas opções
typedef struct {
    char *questao_texto;
    char *opcao[4];
    int opcao_correta;
} Questao;

// Função para exibir uma pergunta e obter a resposta do usuário
int pergunta(Questao q) {
    int resposta;

    do {
        printf("\n%s\n", q.questao_texto);
       int j;
	    for (j = 0; j < 4; j++) {
            printf("%d) %s\n", j + 1, q.opcao[j]);
        }

        printf("Escreva sua resposta: ");
        scanf("%d", &resposta);

        if (resposta < 1 || resposta > 4) {
            printf("Resposta inválida. Por favor, escolha um número entre 1 e 4.\n");
        }
    } while (resposta < 1 || resposta > 4);

 return resposta - 1 == q.opcao_correta;
	
}

int main() {
	printf("                                                                                                                     EcoQuiz\n");

